{
    "name": "Gree HVAC MQTT bridge",
    "version": "1.3.0-testing.1",
    "slug": "gree_hvac_mqtt_bridge",
    "description": "Hass.io addon for controlling Gree air conditioners using the MQTT climate platform",
    "url": "https://github.com/aretokas/gree-hvac-mqtt-bridge",
    "arch": [
        "amd64",
        "i386"
    ],
    "startup": "application",
    "boot": "auto",
    "init": false,
    "hassio_api": false,
    "hassio_role": "default",
    "options": {
        "mqtt": {
            "broker_url": "mqtt://localhost",
            "username": "",
            "password": "",
            "retain": true
        },
        "devices": [
            {
                "hvac_host": "192.168.1.255",
                "auto_lights": true,
                "auto_xfan": true,
                "mqtt_topic_prefix": "greehvac"
            }
        ]
    },
    "schema": {
        "mqtt": {
            "broker_url": "str",
            "topic_prefix": "str?",
            "username": "str?",
            "password": "str?",
            "retain": "bool?",
            "debug": "bool?"
        },
        "devices": [
            {
                "hvac_host": "str",
                "auto_lights": "bool?",
                "auto_xfan": "bool?",
                "mqtt_topic_prefix": "str",
                "zigbee2mqtt_sensor_topic": "str?"
            }
        ]
    }
}